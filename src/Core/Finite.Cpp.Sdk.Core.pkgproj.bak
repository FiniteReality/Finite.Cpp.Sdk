<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="16.0" DefaultTargets="Pack" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" />

  <PropertyGroup>
    <NoBuild>true</NoBuild>
    <PackageId>Finite.Cpp.Sdk</PackageId>
    <PackageVersion>$(VersionPrefix)-$(VersionSuffix)</PackageVersion>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PackageType>MSBuildSdk</PackageType>
  </PropertyGroup>

  <ItemGroup>
    <File Include="sdk/**/*">
      <PackagePath>Sdk</PackagePath>
    </File>
    <File Include="targets/**/*">
      <PackagePath>targets</PackagePath>
    </File>
  </ItemGroup>

  <Import Project="..\Directory.Build.targets" />
  <Import Project="$(MSBuildExtensionsPath)\Sdks\NuGet.Build.Tasks.Pack\build\NuGet.Build.Tasks.Pack.targets" />

  <Target Name="_GetPackageFiles">
    <ItemGroup>
      <_PackageFiles Include="@(File)">
        <BuildAction Condition = "'%(File.BuildAction)' == ''">None</BuildAction>
      </_PackageFiles>
    </ItemGroup>
  </Target>

  <Target Name="_WalkEachTargetPerFramework">
  </Target>
</Project>